{
  "name": "@zmrl/material-grid",
  "version": "3.0.2",
  "description": "Feature-rich data grid react component, built with react-table and MUI.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest",
    "checkTypes": "tsc --noEmit",
    "dev": "vite -c vite.config.ts demo",
    "build": "rimraf dist && vite build",
    "prepare": "pnpm build",
    "lint": "eslint --fix ./src"
  },
  "author": "zmrl",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-table": "^8.5.2"
  },
  "devDependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.2",
    "@mui/system": "^5.9.2",
    "@rollup/plugin-typescript": "^8.3.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^20.0.0",
    "pnpm": "^7.6.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vitest": "^0.19.1"
  },
  "peerDependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.8.0",
    "@mui/material": "^5.9.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "overrides": {
    "react": "^18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zmrl010/material-grid.git"
  },
  "keywords": [
    "react-table",
    "mui",
    "material-ui"
